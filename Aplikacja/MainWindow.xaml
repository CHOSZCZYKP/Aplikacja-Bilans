<Window x:Class="Aplikacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacja"
        mc:Ignorable="d"
        Title="Rachunkowość Komputerowa Piotr Kapliński, Kacper Gwoździej, Paweł Choszczyk" Height="800" Width="1400" MinHeight="800" MinWidth="1400">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Content="Konta" MinWidth="100" Click="Button_Click1"/>
            <Button Content="Bilans" MinWidth="100" Margin="10,0,0,0" Click="Button_Click2"/>
            <Button Content="Historia" MinWidth="100" Margin="10,0,0,0" Click="Button_Click3"/>
        </StackPanel>
        <TextBlock x:Name="Tekst_powitalny" Text="Rachunkowość komputerowa" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
        <Frame x:Name="Main" Margin="0, 35, 0, 0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
